{
  "name": "meteor-wallet",
  "private": true,
  "scripts": {
    "start": "meteor --exclude-archs web.browser.legacy,web.cordova --settings private/env/dev/settings.json",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "quave-eslint": "eslint . --fix",
    "quave-prettier": "prettier --write \"**/*.js\"",
    "quave-check": "npm run quave-eslint && npm run quave-prettier"
  },
  "dependencies": {
    "@babel/runtime": "^7.19.0",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.10",
    "@types/meteor": "^2.9.2",
    "autoprefixer": "^10.4.8",
    "meteor-node-stubs": "^1.2.5",
    "postcss": "^8.4.16",
    "postcss-load-config": "^4.0.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-error-boundary": "^3.1.4",
    "react-router-dom": "^6.8.1",
    "simpl-schema": "^1.12.3",
    "tailwindcss": "^3.2.7"
  },
  "devDependencies": {
    "@quave/eslint-config-quave": "^1.0.7",
    "prettier": "^2.7.1",
    "prettier-plugin-tailwindcss": "^0.1.11"
  },
  "eslintConfig": {
    "extends": [
      "@quave/quave"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "meteor npm test && lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    },
    "testModule": "tests/main.js"
  }
}
